<h1>Please sign up</h1>

<% if flash[:errors] %>
  Sorry, there were the following problems with the form:
  <ul id="errors">
    <% flash[:errors].each do |error| %>
      <li><%= error%></li>
    <% end %>
  </ul>
<% end %>

<form action="/users" method="post">
  Email: <input name="email" type="text" value="<%= @user.email %>">
  Name: <input name="name" type="text" value="<%= @user.name %>">
  Username: <input name="username" type="text" value="<%= @user.username %>">
  Password: <input name="password" type="password">
  Password Confirmation: <input name="password_confirmation" type="password">
  <input type="submit" value="Sign up">
</form>